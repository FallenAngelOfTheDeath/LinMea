        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".linmea.startup.StartUpActivity">


            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>


        </activity>
        <activity android:name=".authentication.LoginActivity">
        </activity>
        <activity android:name=".authentication.SignUpActivity">
        </activity>
        <activity android:name=".linmea.user.profile.ProfileActivity">
        </activity>
        <activity android:name=".authentication.ChangePasswordActivity">
        </activity>
        <activity android:name=".linmea.user.profile.ChangeProfileDataActivity">
        </activity>
        <activity android:name=".profile.activities.ChangeUserProfileActivity">
        </activity>
        <activity android:name=".firebase.FireBaseActivity">
        </activity>
        <activity android:name=".firebase.AddWordCustomDictionaryActivity">
        </activity>
        <activity android:name=".firebase.DictionariesListActivity">
        </activity>
        <activity android:name=".ui.MainActivity2">
        </activity>
        <activity android:name=".dictionaries.activity.AddCustomDictionaryActivity">
        </activity>
        <activity android:name=".dictionaries.activity.DictionaryActivity">
        </activity>
        <activity
            android:name=".preference.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".linmea.preference.CustomDictionaryPreference"
            android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".linmea.ui.MainActivity">
        </activity>
        <activity android:name=".linmea.startup.FirstStartActivity">
        </activity>

        <service
            android:name=".linmea.service.UpdateUserData"
            android:enabled="true"
            android:exported="true">
        </service>

        <activity
            android:name=".linmea.ui.dictionary.WordDetailActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".linmea.ui.dictionary.BaseDetailActivity"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".Main2Activity">

        </activity>
    </application>

